<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HelloWorld.Image2"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HelloWorld.MarkupExtensions">
    <!--  how to define custom markup extension: Here it is "ImageResource" which is custome extension markup  -->
    <Image
        x:Name="image"
        Aspect="AspectFill"
        Source="{local:ImageResource HelloWorld.Images.background.jpg}" />
</ContentPage>